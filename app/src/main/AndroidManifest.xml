<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.dcal.thermoconnectapp">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ThermoConnectApp">
        <activity android:name=".ImageActivity"></activity>
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddAnimalActivity"
            android:label="@string/title_activity_add_animal"
            android:theme="@style/Theme.ThermoConnectApp.NoActionBar" />
        <activity
            android:name=".AddTerraActivity"
            android:label="@string/title_activity_add_terra"
            android:theme="@style/Theme.ThermoConnectApp.NoActionBar" />
        <activity
            android:name=".AnimalActivity"
            android:label="@string/title_activity_animal"
            android:theme="@style/Theme.ThermoConnectApp.NoActionBar" />
        <activity
            android:name=".TerrariumActivity"
            android:label="@string/title_activity_terrarium"
            android:theme="@style/Theme.ThermoConnectApp.NoActionBar" />
        <activity
            android:name=".TerraListActivity"
            android:label="@string/title_activity_terra_list"
            android:theme="@style/Theme.ThermoConnectApp.NoActionBar" />
        <activity
            android:name=".FileActivity"
            android:label="@string/title_activity_terra_list"
            android:theme="@style/Theme.ThermoConnectApp.NoActionBar" />
    </application>

</manifest>